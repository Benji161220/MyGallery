<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyGallery" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
    </style>

    <style name="Widget.App.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/light_red</item>
    </style>

    <style name="Theme.MyGallery" parent="Base.Theme.MyGallery" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- This sets the color of the title text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- This sets the color of the navigation icon and overflow icon -->
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>